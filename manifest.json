{
  "manifest_version": 2,

  "name": "TeamCity Status Monitor",
  "description": "This extension displays TeamCity build status",
  "version": "0.6",

  "permissions": [
    "storage"
  ],
  
  "options_ui": {
    "page": "options.html",
    "chrome_style": true,
    "open_in_tab": false
  },

  "icons": { "16": "icons/16x16.png",
             "24": "icons/24x24.png",
             "32": "icons/32x32.png",
             "48": "icons/48x48.png",
             "64": "icons/64x64.png",
             "96": "icons/96x96.png",
            "128": "icons/128x128.png",
            "128": "icons/128x128.png"},

  "content_scripts": [
    {
      "matches": ["*://*/*externalStatus.html", "file:///*/*externalStatus.html"],
      "css": ["monitor.css"],
      "js": ["jquery-1.11.1.min.js", "build.js", "storage.js", "external-status-page.js", "replacement-page.js", "monitor.js"]
    }
  ]
}