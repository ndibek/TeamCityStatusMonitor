{
  "manifest_version": 2,

  "name": "TeamCity Status Monitor",
  "description": "This extension displays TeamCity build status",
  "version": "0.5",

  "permissions": [
    "storage"
  ],
  
  "options_ui": {
    "page": "options.html",
    "chrome_style": true,
    "open_in_tab": false
  },

  "content_scripts": [
    {
      "matches": ["*://*/externalStatus.html"],
      "css": ["monitor.css"],
      "js": ["jquery-1.11.1.min.js", "storage.js", "external-status-page.js", "replacement-page.js", "monitor.js"]
    }
  ]
}