{
  "manifest_version": 2,

  "name": "TeamCity Status Monitor",
  "short_name" : "TC StatusMon",
  "description": "This extension displays TeamCity build status",
  "version": "0.11",

  "author" : "Jamie Holdstock", 

  "permissions": [
    "storage"
  ],
  
  "options_ui": {
    "page": "html/options.html",
    "chrome_style": true,
    "open_in_tab": false
  },

  "options_page": "html/options.html",

  "icons": { "16": "icon/16x16.png",
             "24": "icon/24x24.png",
             "32": "icon/32x32.png",
             "48": "icon/48x48.png",
             "64": "icon/64x64.png",
             "96": "icon/96x96.png",
            "128": "icon/128x128.png",
            "128": "icon/128x128.png"},

  "content_scripts": [
    {
      "all_frames" : true,
      "matches": ["*://*/*externalStatus.html", "file:///*/*externalStatus.html"],
      "css": ["css/monitor.css"],
      "js": ["vendor/jquery-1.11.1.min.js", "js/build.js", "js/storage.js", "js/external-status-page.js", "js/replacement-page.js", "js/monitor.js"]
    }
  ]
}